@page
@model Theasbyte.Pages.ContactModel
@{
    ViewData["Title"] = "Touch Base";
}

<div class="text-center">
  <h3>Let's get in touch</h3>
</div>

<div class="row align-items-center">
    <div class="col" id="message-form">
        <form action="">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="mb-3">
              <label for="" class="form-label text-white">Full Name</label>
              <input type="text "
                class="form-control" name="" id="" aria-describedby="helpId" placeholder="" required>
                @* <span asp-validation-for="" class="text-danger"></span> *@
            </div>
            <div class="mb-3">
              <label for="" class="form-label text-white">Email Address</label>
              <input type="email"
                class="form-control" name="" id="" aria-describedby="helpId" placeholder="" required>
                @* <span asp-validation-for="" class="text-danger"></span> *@
            </div>
            <div class="mb-3">
              <label for="" class="form-label text-white">Phone Number</label>
              <input type="tel"
                class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                @* <span asp-validation-for="" class="text-danger"></span> *@
            </div>
            <div class="mb-3">
              <label for="" class="form-label text-white">Message <span class="text-muted">(Optional)</span></label>
              <textarea class="form-control" name="" id="" rows="5"></textarea>
            </div>
            <button type="submit" class="btn contact-btn">Contact Me</button>
        </form>
    </div>
    <div class="col">
      <img src="~/img/new_msg.svg" alt="contact image">
    </div>
</div>